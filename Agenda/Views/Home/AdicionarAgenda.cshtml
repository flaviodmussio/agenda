@model AgendaModel
@{
    ViewData["Title"] = "AdicionarAgenda";
}

<div class="container">
    
        <div class="row">
            <div class="col-lg-12">
                <h1><label>AdicionarAgenda</label></h1>
            </div>
            <div class="col-lg-12">
                <h3>Nome</h3>
                @Html.EditorFor(a => a.Nome, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                <h3>Email</h3>
                @Html.EditorFor(a => a.Contato.Email, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
            <div class="col-lg-12">
                <h3>Telefone</h3>
                @Html.EditorFor(a => a.Contato.Telefone, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#Confirmar">Salvar</button>
            </div>
        </div>
</div>

